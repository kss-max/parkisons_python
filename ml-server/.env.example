# FastAPI ML Server Environment Configuration
# Copy this file to .env and configure for your environment

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1
LOG_LEVEL=info

# Model Paths (relative to app.py or absolute)
# Leave empty to use defaults: ./models/
MODEL_DIR=./models
MRI_MODEL_PATH=./models/model_bestmri.h5
VOICE_MODEL_PATH=./models/voice_model.joblib

# CORS Configuration
# Comma-separated list of allowed origins (* for all)
CORS_ORIGINS=*

# Optional: External Model Storage (if models are too large for Git)
# USE_REMOTE_MODELS=false
# REMOTE_MODEL_URL=https://your-storage.com/models/

# Optional: Logging
# LOG_FILE=./logs/app.log
# LOG_JSON=false

# Optional: Performance
# MAX_UPLOAD_SIZE_MB=10
# PREDICTION_TIMEOUT_SECONDS=30
